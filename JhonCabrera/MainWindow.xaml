<Window x:Class="JhonCabrera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JhonCabrera"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" Background="#006ba6">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Inicio de Sesión" FontSize="20" Margin="0 0 0 20"/>
            <Label Content="Nombre de Usuario:"/>
            <TextBox Name="txtUsername" Width="200" Margin="0 0 0 10"/>
            <Label Content="Contraseña:"/>
            <PasswordBox Name="txtPassword" Width="200" Margin="0 0 0 10"/>
            <Button Content="Iniciar Sesión" Click="Login_Click" Width="100"/>
            <TextBlock Name="txtError" Foreground="Red" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
